<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <Button
        android:id="@+id/task1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="task1"/>
    <Button
        android:id="@+id/task7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="task7"/>


    <Button
        android:id="@+id/bottomBtnView"
        android:layout_width="wrap_content"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:text="toBottomBtnView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to MVC"
        android:id="@+id/checkMVC"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to MVP"
        android:id="@+id/checkMVP"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to MVVM"
        android:id="@+id/checkMVVM"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toRec"
        android:text = "toRec"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/incCount"
        android:text = "incCount"/>
    <TextView
        android:id="@+id/getCountTv"
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
